# NL2SQL Generator - Backend Environment Variables
# Copy this file to .env and update with your values

# API Settings
API_V1_PREFIX=/api/v1
PROJECT_NAME=NL2SQL Generator
VERSION=1.0.0

# CORS Settings (Frontend URL)
BACKEND_CORS_ORIGINS=["http://localhost:3000"]

# LLM Settings (Ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL_PRIMARY=llama3.1:70b
OLLAMA_MODEL_SECONDARY=llama3.1:8b
OLLAMA_TIMEOUT=120

# PlantUML Settings
PLANTUML_SERVER_URL=http://www.plantuml.com/plantuml

# Database Settings
SUPPORTED_DATABASES=["postgresql","mysql","oracle","sqlserver"]
DEFAULT_DATABASE=postgresql

# File Storage
UPLOAD_DIR=./uploads
EXPORT_DIR=./exports
MAX_UPLOAD_SIZE=10485760

# Diagram Settings
DEFAULT_DIAGRAM_FORMAT=mermaid
DIAGRAM_RENDER_TIMEOUT=30

# Validation Settings
MAX_ENTITIES=50
MAX_RELATIONSHIPS=100
MAX_ATTRIBUTES_PER_ENTITY=30
